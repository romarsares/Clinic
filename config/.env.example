# Pediatric Clinic SaaS - Environment Variables
# Copy this file to .env and update with your actual values

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Environment (development, staging, production)
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# MySQL Database
DB_HOST=clinic-db
DB_PORT=3306
DB_NAME=clinic_saas
DB_USER=clinic_user
DB_PASSWORD=clinic_pass_2024_secure_change_this

# MySQL Root (for docker-compose)
MYSQL_ROOT_PASSWORD=root_pass_2024_secure_change_this

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# JWT Secret (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-32-chars-minimum

# Encryption Key for PHI data (32 characters)
ENCRYPTION_KEY=your-32-char-encryption-key-here-for-phi-data

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_TIMEOUT=3600000

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Redis (Optional - for caching)
REDIS_URL=redis://clinic-redis:6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourclinic.com

# SMS Configuration (for Philippines - use local providers)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM=+639123456789

# ==========================================
# LOGGING & MONITORING
# ==========================================

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FILE=/var/log/clinic-saas/app.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================

# Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ==========================================
# HEALTHCARE SPECIFIC SETTINGS
# ==========================================

# PH Data Privacy Act Compliance
PHI_ENCRYPTION_ENABLED=true
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=2555

# ICD-10 Integration (future)
ICD_API_URL=https://api.icd.who.int
ICD_API_KEY=

# Drug Database Integration (future)
DRUG_API_URL=
DRUG_API_KEY=

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Debug Mode
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# PRODUCTION OVERRIDES
# ==========================================

# In production, ensure these are set:
# - Strong, unique passwords
# - Real SSL certificates
# - Proper domain names
# - External database/redis instances
# - Monitoring and alerting
# - Backup procedures